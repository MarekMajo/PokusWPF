<Window x:Class="MSK_PC_Controller.Views.AddPcView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add PC"
        Width="320"
        Height="260"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add PC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <TextBox Grid.Row="1"
                 materialDesign:HintAssist.Hint="Name"
                 Text="{Binding PcName, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,12"/>

        <TextBox Grid.Row="2"
                 materialDesign:HintAssist.Hint="IP"
                 Text="{Binding PcIp, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,8"/>

        <TextBlock Grid.Row="3" Text="{Binding Error}" Foreground="Tomato" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,8,0"/>
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
